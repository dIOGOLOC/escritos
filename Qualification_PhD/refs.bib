	journal = {Journal of South American Earth Sciences},
	author = {Assumpção, Marcelo and Bianchi, Marcelo and Julià, Jordi and Dias, Fábio L. and Sand França, George and Nascimento, Rosana and Drouet, Stéphane and Pavão, César Garcia and Albuquerque, Diogo Farrapo and Lopes, Afonso E. V.},
